function step_02_perm() {
	return array('access step_02 content');
}

function step_02_block($op='list', $delta=0) {
	$block = array();

	if ($op == "list") {
		$block[0]["info"] = t('Step 2, block 0 (eneste block)');
	} else if ($op == 'view') {
		$block['subject'] = 'Din computer:';
		$block['content'] = genOut($delta);    
	}
	return $block;
}
